		    	    android:id="@+id/catalog_size"
		    	    android:inputType="number"
		    	    style="@style/ControlTheme"
		    	    android:background="@drawable/rectanagle_rounded_btn"
		    	    android:text=""/>
		    </LinearLayout>		
		    <LinearLayout
		        style="@style/UsualLayoutsTheme"
		        android:orientation="vertical">
		    	<TextView
		    	    style="@style/ControlTheme"
		    	    android:background="@drawable/rectangle_rounded_header"
		    	    android:text="@string/settings_save_state"/>
		    	<EditText
		    	    android:id="@+id/save_state"
		    	    style="@style/ControlTheme"
		    	    android:background="@drawable/rectanagle_rounded_btn"
		    	    android:text=""/>
		    </LinearLayout>
		    
		    <LinearLayout
		        style="@style/UsualLayoutsTheme"
		        android:orientation="vertical">
		    	<TextView
		    	    style="@style/ControlTheme"
		    	    android:background="@drawable/rectangle_rounded_header"
		    	    android:text="@string/settings_time_save_state"/>
