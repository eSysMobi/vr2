<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutsTheme">
 
    <ScrollView
        style="@style/LayoutsTheme">
        <LinearLayout 
            style="@style/LayoutsTheme">
		    <LinearLayout
		        style="@style/UsualLayoutsTheme"
		        android:orientation="vertical">
		    	<TextView
		    	    style="@style/ControlTheme"
		    	    android:background="@drawable/rectangle_rounded_header"
		    	    android:text="@string/settings_autostart"/>
		    	<EditText
		    	    android:id="@+id/autostart"
		    	    style="@style/ControlTheme"
		    	    android:background="@drawable/rectanagle_rounded_btn"
		    	    android:text=""/>
		    </LinearLayout>
		    
		    <LinearLayout
		        style="@style/UsualLayoutsTheme"
		        android:orientation="vertical">
		    	<TextView
		    	    style="@style/ControlTheme"
		    	    android:background="@drawable/rectangle_rounded_header"
		    	    android:text="@string/settings_type"/>
		    	<EditText
		    	    android:id="@+id/type"
		    	    style="@style/ControlTheme"
		    	    android:background="@drawable/rectanagle_rounded_btn"
		    	    android:text=""/>
		    </LinearLayout>
		
		    <LinearLayout
		        style="@style/UsualLayoutsTheme"
		        android:orientation="vertical">
		    	<TextView
		    	    style="@style/ControlTheme"
		    	    android:background="@drawable/rectangle_rounded_header"
