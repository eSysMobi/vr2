		    	    android:id="@+id/time_save_state"
		    	    android:inputType="number"
		    	    style="@style/ControlTheme"
		    	    android:background="@drawable/rectanagle_rounded_btn"
		    	    android:text=""/>
		    </LinearLayout>
		    
		    <LinearLayout
		        style="@style/UsualLayoutsTheme"
		        android:orientation="vertical">
		    	<TextView
		    	    style="@style/ControlTheme"
		    	    android:background="@drawable/rectangle_rounded_header"
		    	    android:text="@string/settings_sync"/>
		    	<EditText
		    	    android:id="@+id/sync"
		    	    style="@style/ControlTheme"
		    	    android:background="@drawable/rectanagle_rounded_btn"
		    	    android:text=""/>
		    </LinearLayout>	
		    <Button
		   		android:id="@+id/save"
		    	style="@style/ControlTheme"
		    	android:background="@drawable/rectanagle_rounded_btn"
		    	android:text="@string/settings_save"/>		        
