		        style="@style/UsualLayoutsTheme"
		        android:orientation="vertical">
		    	<TextView
		    	    style="@style/ControlTheme"
		    	    android:background="@drawable/rectangle_rounded_header"
		    	    android:text="@string/settings_time_foto"/>
		    	<EditText
		    	    android:id="@+id/time_foto"
		    	    android:inputType="number"
		    	    style="@style/ControlTheme"
		    	    android:background="@drawable/rectanagle_rounded_btn"
		    	    android:text=""/>
		    </LinearLayout>
		    
		    <LinearLayout
		        style="@style/UsualLayoutsTheme"
		        android:orientation="vertical">
		    	<TextView
		    	    style="@style/ControlTheme"
		    	    android:background="@drawable/rectangle_rounded_header"
